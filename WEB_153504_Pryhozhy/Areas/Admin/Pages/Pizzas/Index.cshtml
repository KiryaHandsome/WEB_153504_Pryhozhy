@page
@model WEB_153504_Pryhozhy.Areas.Admin.Pages.Pizzas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-dark btn-block ml-4">Create New</a>
</p>

<div id="catalog-partial">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pizza.Items[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pizza.Items[0].Calories)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pizza.Items[0].Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pizza.Items[0].CategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pizza.Items[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pizza.Items[0].Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Pizza.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Calories)
                    </td>
                    <td>
                        <img src="@item.Image" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <div class="d-flex flex-column justify-content-center align-middle">
                            <a class="btn btn-outline-warning btn-block" asp-page="/Pizzas/Edit" asp-route-id="@item.Id">Редактировать</a>
                            <a class="btn btn-outline-info btn-block" asp-page="/Pizzas/Details" asp-route-id="@item.Id">Подробнее</a>
                            <a class="btn btn-outline-danger btn-block" asp-page="/Pizzas/Delete" asp-route-id="@item.Id">Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <Pager current-page="@Model.Pizza.CurrentPage"
               total-pages="@Model.Pizza.TotalPages"
               is-admin="true">
        </Pager>
    </nav>
</div>


