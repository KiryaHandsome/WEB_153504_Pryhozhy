@using WEB_153504_Pryhozhy.Domain.Models;
@model ListModel<Pizza>;

@{
    ViewData["Title"] = "Pizzas Catalog";
    var categories = ViewData["categories"] as List<Category>;
    int prev = Model.CurrentPage == 1 ? 1 : Model.CurrentPage - 1;
    int next = Model.CurrentPage == Model.TotalPages ? Model.TotalPages : Model.CurrentPage + 1;
}

<h2>Каталог пицц</h2>
<br />
<!-- Category picking -->
<div class="col-2 border-2">
    <div class="dropdown me-2 ml-2 ms-2">
        <button class="btn btn-secondary dropdown-toggle"
                type="button"
                id="dropdownMenu2"
                data-bs-toggle="dropdown"
                aria-expanded="false">
            @ViewData["currentCategory"]
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
            <li>
                <a class="dropdown-item"
                   asp-controller="pizza"
                   asp-route-category=@null>Все</a>
            </li>
            @foreach (var item in categories)
            {
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item"
                       asp-controller="pizza"
                       asp-route-category="@item.NormalizedName">
                        @item.Name
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
<br />
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Items)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@item.Image" class="card-img-top pizza-img">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text text-center"><strong>@item.Price$</strong></p>
                </div>
                <div class="btn btn-primary" asp-action="some action">
                    В корзину
                </div>
            </div>
        </div>
    }
</div>

<br />

<nav>
    <Pager current-page="@Model.CurrentPage"
           total-pages="@Model.TotalPages">
    </Pager>
